{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "stabilityDays": 3
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "squash",
      "rebaseWhen": "conflicted"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "squash",
      "rebaseWhen": "conflicted"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "automergeStrategy": "auto",
      "rebaseWhen": "auto"
    }
  ]
}
